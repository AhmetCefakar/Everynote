@helper LinkButton(string id = "", string url = "", string addtionalClass = "", string title = "", string icon = "", string text = "")
{
	<a id="@id" name="@id" href="@url" class="btn btn-xs @addtionalClass" title="@title">
		<span class="glyphicon glyphicon-@icon"></span> @text
	</a>
}

